# ===========================================
# PsicoPay Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/psicopay

# -------------------------------------------
# Google Calendar API
# -------------------------------------------
# Create OAuth2 credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_CALENDAR_ID=primary

# -------------------------------------------
# Mercado Pago
# -------------------------------------------
# Get credentials at: https://www.mercadopago.com.ar/developers/
# Use TEST-* credentials for development
MP_ACCESS_TOKEN=TEST-0000000000000000-000000-00000000000000000000000000000000-000000000
MP_PUBLIC_KEY=TEST-00000000-0000-0000-0000-000000000000
MP_WEBHOOK_SECRET=your-webhook-secret

# -------------------------------------------
# Twilio (WhatsApp)
# -------------------------------------------
# Get credentials at: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# -------------------------------------------
# Session Configuration
# -------------------------------------------
# Default session price in ARS (e.g., 15000 = $15,000 ARS)
SESSION_PRICE=15000

# Notification timing (in minutes before session)
REMINDER_24H_OFFSET=1440
REMINDER_2H_OFFSET=120
MEET_LINK_OFFSET=15

# -------------------------------------------
# Cron Schedule
# -------------------------------------------
# Default: Run every hour at minute 0
CRON_SCHEDULE=0 * * * *
